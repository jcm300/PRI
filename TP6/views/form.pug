extends layout

block conteudo
    .w3-container
        .w3-card-4
            header.w3-container.w3-red
                h1 Registar Tese
            .w3-container
                form.w3-container(action="/processaForm", method="POST")
                    label.w3-text-red
                        h4 Aluno
                    label.w3-text-red
                        b Nome
                    input.w3-input.w3-border(type="text", name="nome")
                    label.w3-text-red
                        b Número/Identificador
                    input.w3-input.w3-border(type="text", name="numero")
                    label.w3-text-red
                        b Curso
                    input.w3-input.w3-border(type="text", name="curso")
                    label.w3-text-red
                        b Instituição
                    input.w3-input.w3-border(type="text", name="instituicao")
                    br
                    label.w3-text-red
                        h4 Tese
                    label.w3-text-red
                        b Título
                    input.w3-input.w3-border(type="text", name="titulo")
                    label.w3-text-red
                        b Data
                    input.w3-input.w3-border(type="date", name="data")
                    label.w3-text-red
                        b Tipo
                    .w3-container
                        input(type="radio", name="tipo", value="Mestrado")
                        label  Mestrado
                    .w3-container
                        input(type="radio", name="tipo", value="Doutoramento")
                        label  Doutoramento
                    br
                    input.w3-btn.w3-grey(type="submit", value="Enviar")
            footer.w3-container.w3-red
                h6
                    a(href="http://localhost:4006/") Voltar à página principal
                address Gerado por RegTeseApp by José Carlos Lima Martins
