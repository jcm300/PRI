extends layout

block corpo
    .w3-container
        .w3-card-4
            header.w3-container.w3-black
                h1= obra.titulo
                if obra.subtitulo
                    h2= obra.subtitulo
            .w3-container
                p
                    b Tipo: 
                    = obra.tipo
                p
                    b Compositor: 
                    = obra.compositor
                h3 Instrumentos
                table.w3-table.w3-all
                    tr
                        th Nome
                        th Documento
                        th Voz
                        th Clave
                        th Afinação
                    each inst in obra.instrumentos
                        tr
                            td= inst.nome
                            td= inst.partitura.path
                            if inst.partitura.voz
                                td= inst.partitura.voz
                            if inst.partitura.clave
                                td= inst.partitura.clave
                            if inst.partitura.afinacao
                                td= inst.partitura.afinacao
            footer.w3-container.w3-black
                p
                    a(href="http://localhost:6001/index") Voltar à página principal
                    address Gerado por ArquivoMusicalApp by José Carlos Lima Martins
